<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="kr.baka.groupriding.viewmodel.FailViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="@{vm.title}"
            android:background="@color/colorButtonDanger"/>

        <ImageView
            android:tint="@color/colorButtonDanger"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fail_face"
            android:layout_width="wrap_content"
            android:layout_height="96dp"/>

        <TextView
            android:layout_margin="20dp"
            android:text="@{vm.message}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16dp"
            android:background="@color/colorDefaultForeground"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:onClick="@{()->vm.closeDialog()}"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/stringBtnClose"
                android:textColor="#000000"
                android:textSize="16dp"
                android:background="#ffffff"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    </LinearLayout>
</layout>