<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="kr.baka.groupriding.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="#000"
        app:variableBackgroundColor="@{viewModel.backgroundColor}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <fragment
            android:id="@+id/map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.naver.maps.map.MapFragment" />

        <Button
            android:visibility="@{viewModel.groupRidingStopVisibility}"
            android:onClick="@{()->viewModel.startGroupRidingService()}"
            android:id="@+id/tgRunning"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/style_tgbtn_running"
            android:text="@string/stringStartGroupRiding"
            android:textSize="14dp"
            android:textColor="@color/colorUnchecked"
            android:paddingHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>

        <Button
            android:visibility="@{viewModel.groupRidingStartVisibility}"
            android:onClick="@{()->viewModel.stopGroupRidingService()}"
            android:id="@+id/btnRunningStop"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/style_tgbtn_running"
            android:text="@string/stringStopGroupRiding"
            android:textSize="14dp"
            android:textColor="@color/colorDefaultBackGround"
            android:paddingHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>

        <ImageButton
            android:clickable="true"
            android:elevation="4dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:onClick="@{(view)->viewModel.startSettingActivity(view)}"
            android:id="@+id/btnMenu"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp"
            android:background="@drawable/style_more_popup_menu"
            android:layout_width="36dp"
            android:layout_height="36dp">
        </ImageButton>

        <Button
            android:visibility="@{viewModel.groupRidingStartVisibility}"
            android:onClick="@{()->viewModel.inviteCodeDialogShow()}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/style_tgbtn_running"
            android:text="@string/stringInvite"
            android:textSize="14dp"
            android:textColor="@color/colorDefaultBackGround"
            android:paddingHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv_speed"
            android:elevation="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/style_speed_box"
            android:layout_width="192dp"
            android:layout_height="192dp">
            <TextView
                android:textSize="112dp"
                android:textAlignment="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@{viewModel.layoutMiddle.data}"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
