<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="kr.baka.groupriding.viewmodel.GroupRidingFinishViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="그룹라이딩 종료"
            android:background="@color/colorDefaultBackGround"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:tint="@color/colorButtonConfirm"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_finish"
            android:layout_width="match_parent"
            android:layout_height="128dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:text="그룹라이딩이 종료되었습니다.\n경로를 저장하려면 [저장] 버튼을 클릭하세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16dp"
            android:background="@color/colorDefaultForeground"/>

        <EditText
            android:text="@={vm.name}"
            android:hint="경로 이름"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="60dp"
            android:textColor="#000"
            android:textSize="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:onClick="@{()->vm.closeDialog()}"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/stringBtnClose"
                android:textColor="#000000"
                android:textSize="16dp"
                android:background="#ffffff"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <Button
                android:onClick="@{()->vm.recodeSave()}"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="저장"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:background="@color/colorButtonConfirm"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    </LinearLayout>
</layout>