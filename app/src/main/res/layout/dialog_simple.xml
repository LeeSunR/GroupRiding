<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
        name="vm"
        type="kr.baka.groupriding.viewmodel.SimpleDialogViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="@{vm.title}"
            android:background="@color/colorDefaultBackGround"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:layout_marginTop="20dp"
            android:text="@{vm.message}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16dp"
            android:background="@color/colorDefaultForeground"/>

        <TextView
            android:visibility="@{vm.bigMessageVisibility}"
            android:text="@{vm.bigMessage}"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="60dp"
            android:textColor="#F22"
            android:textSize="32dp"/>

        <EditText
            android:visibility="@{vm.editTextVisibility}"
            android:text="@={vm.editText}"
            android:hint="@{vm.editTextHint}"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:textColor="#000"
            android:textSize="24dp"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:onClick="@{vm.leftOnClick}"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{vm.leftBtnText}"
                android:textColor="#000"
                android:textSize="16dp"
                android:background="#FFF"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <Button
                android:onClick="@{vm.rightOnClick}"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{vm.rightBtnText}"
                android:textColor="#FFF"
                android:textSize="16dp"
                app:variableButtonColor="@{vm.btnColor}"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    </LinearLayout>
</layout>